{
    "$schema": "http://json.schemastore.org/template",
    "author": "Jean",
    "classifications": [
        "Jean Demo"
    ],
    "name": "Jean Chart",
    "identity": "AntDesign.Pro",
    "groupIdentity": "AntDesign.Pro",
    "shortName": "antdesign",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "AntDesign.Pro.Template",
    "preferNameDirectory": true,
    "symbols": {
        "full": {
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false",
            "description": "create all pages"
        },
        "host": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "webapp",
            "choices": [
                {
                    "choice": "webapp",
                    "description": "Blazor Web APP with auto render mode"
                },
                {
                    "choice": "wasm",
                    "description": "WebAssembly Standalone app"
                },
                {
                    "choice": "server",
                    "description": "Server-site app"
                }
            ]
        },
        "styles": {
            "type": "parameter",
            "dataType": "choice",
            "description": "Whether use NodeJS and Less to compile your custom themes.",
            "defaultValue": "css",
            "choices": [
                {
                    "choice": "css",
                    "description": "Use CSS without NodeJS."
                },
                {
                    "choice": "less",
                    "description": "Use Less and NodeJS."
                }
            ]
        },
        "UseNodeJS": {
          "type": "computed",
          "value": "(styles == 'less')"
        },
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        }
    },
    "primaryOutputs": [
        {
            "path": "./"
        }
    ],
    "sources": [
        {
            "condition": "(host != 'webapp')",
            "source": "./src/AntDesign.Pro",
            "target": "./",
            "modifiers": [
                {
                    "exclude": [
                        "AntDesign.Pro.csproj",
                        "AntDesign.Pro.csproj.DotSettings",
                        "gulpfile.js"
                    ]
                },
                {
                    "condition": "(!UseNodeJS)",
                    "exclude": [
                        "**/*.less",
                        "package.json"
                    ]
                },
                {
                    "condition": "(UseNodeJS)",
                    "exclude": [
                        "**/*.css"
                    ]
                },
                {
                    "condition": "(!full)",
                    "exclude": [
                        "Components/**/*",
                        "Extensions/**/*",
                        "Layouts/UserLayout.*",
                        "Models/**/*",
                        "Pages/**/*",
                        "Services/**/*",
                        "Utils/**/*",
                        "wwwroot/data/*"
                    ]
                }
            ]
        },
        {
            "condition": "(host == 'webapp')",
            "source": "./src/AntDesign.Pro",
            "target": "./src/AntDesign.Pro.Template.Client/",
            "modifiers": [
                {
                    "exclude": [
                        "AntDesign.Pro.csproj",
                        "AntDesign.Pro.csproj.DotSettings",
                        "gulpfile.js",
                        "App.razor"
                    ]
                },
                {
                    "condition": "(!UseNodeJS)",
                    "exclude": [
                        "**/*.less",
                        "gulpfile.js",
                        "package.json"
                    ]
                },
                {
                    "condition": "(UseNodeJS)",
                    "exclude": [
                        "**/*.css"
                    ]
                },
                {
                    "condition": "(!full)",
                    "exclude": [
                        "Components/**/*",
                        "Extensions/**/*",
                        "Layouts/UserLayout.*",
                        "Models/**/*",
                        "Pages/**/*",
                        "Services/**/*",
                        "Utils/**/*",
                        "wwwroot/data/*"
                    ]
                }
            ]
        },
        {
            "source": "./.template.config/templates/assets",
            "target": "./",
            "modifiers":[
                {
                    "condition": "(!UseNodeJS)",
                    "exclude": [
                        "package.json",
                        "Directory.Build.props"
                    ]
                },
                {
                    "condition": "(host == 'webapp')",
                    "exclude": [
                        "Directory.Build.props"
                    ]
                }
            ]
        },
        {
            "condition": "(host == 'wasm')",
            "source": "./.template.config/templates/wasm",
            "target": "./",
            "modifiers": [
                {
                    "condition": "(full)",
                    "exclude": [
                        "Pages/**/*"
                    ]
                },
                {
                    "condition": "(!UseNodeJS)",
                    "exclude": [
                        "**/*.less",
                        "package.json",
                        "gulpfile.js"
                    ]
                },
                {
                    "condition": "(UseNodeJS)",
                    "exclude": [
                        "**/*.css"
                    ]
                }
            ]
        },
        {
            "condition": "(host == 'server')",
            "source": "./.template.config/templates/server",
            "target": "./",
            "modifiers": [
                {
                    "condition": "(full)",
                    "exclude": [
                       "Pages/Welcome.razor",
                       "Pages/Welcome.razor.less",
                       "Pages/Welcome.razor.css"
                    ]
                },
                {
                    "condition": "(!UseNodeJS)",
                    "exclude": [
                        "**/*.less",
                        "package.json",
                        "gulpfile.js"
                    ]
                },
                {
                    "condition": "(UseNodeJS)",
                    "exclude": [
                        "**/*.css"
                    ]
                }
            ]
        },
        {
            "condition": "(host == 'webapp')",
            "source": "./.template.config/templates/wasm",
            "target": "./src/AntDesign.Pro.Template.Client/",
            "modifiers": [
                 {
                    "exclude": [
                        "AntDesign.Pro.Template.csproj",
                        "Program.cs"
                    ]
                },
                {
                    "condition": "(full)",
                    "exclude": [
                       "Pages/**/*"
                    ]
                },
                {
                    "condition": "(!UseNodeJS)",
                    "exclude": [
                        "**/*.less",
                        "package.json",
                        "gulpfile.js"
                    ]
                },
                {
                    "condition": "(UseNodeJS)",
                    "exclude": [
                        "**/*.css"
                    ]
                }
            ]
        },
        {
            "condition": "(host == 'webapp')",
            "source": "./.template.config/templates/webapp",
            "target": "./",
            "modifiers": [
                {
                    "condition": "(full)",
                    "exclude": [
                        "src/Client/Pages/**/*"
                    ]
                },
                {
                    "condition": "(!UseNodeJS)",
                    "exclude": [
                        "**/*.less",
                        "package.json",
                        "gulpfile.js"
                    ]
                },
                {
                    "condition": "(UseNodeJS)",
                    "exclude": [
                        "**/*.css"
                    ]
                }
            ]
        }
    ],
    "SpecialCustomOperations": {
        "**/*.less": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "if": [
                            "//#if"
                        ],
                        "else": [
                            "//#else"
                        ],
                        "elseif": [
                            "//#elseif"
                        ],
                        "endif": [
                            "//#endif"
                        ],
                        "trim": true,
                        "wholeLine": true,
                        "evaluator": "C++"
                    }
                }
            ]
        },
        "**/*.razor": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "if": [
                            "//#if"
                        ],
                        "else": [
                            "//#else"
                        ],
                        "elseif": [
                            "//#elseif"
                        ],
                        "endif": [
                            "//#endif"
                        ],
                        "trim": true,
                        "wholeLine": true,
                        "evaluator": "C++"
                    }
                }
            ]
        }
    },
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ]
}